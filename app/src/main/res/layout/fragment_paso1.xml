<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".paso1">

    <TextView
        android:id="@+id/tvTituloPaso1"
        android:layout_width="419dp"
        android:layout_height="55dp"
        android:layout_marginTop="193dp"
        android:inputType="textMultiLine|text"
        android:text="Verificar el número de serie del módulo de relés"
        android:textAlignment="center"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/editTextTextPersonName"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextTextPersonName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:ems="10"
        android:inputType="textMultiLine"
        android:text="Número de serie del módulo de relé, verifique el número de serie en la parte posterior del módulo de relés"
        android:textAlignment="center"
        app:layout_constraintBottom_toTopOf="@+id/imagePaso1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvTituloPaso1" />

    <ImageView
        android:id="@+id/imagePaso1"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="254dp"
        android:src="@mipmap/serie_rele"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextTextPersonName" />

</androidx.constraintlayout.widget.ConstraintLayout>
